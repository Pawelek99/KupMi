<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
    </style>

    <style name="BottomNavigationTextActive" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationTextInactive" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Text">
        <item name="font">@font/montserrat</item>
    </style>
</resources>
